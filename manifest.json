{
  "manifest_version": 3,
  "name": "Linkedin Recents",
  "description": "Quickly access recently viewed LinkedIn profiles",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": ["https://www.linkedin.com/*"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}